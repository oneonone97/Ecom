# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_generate_with_crypto_randomBytes_64
JWT_EXPIRE=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=myshop
DB_USER=postgres
DB_PASSWORD=your_secure_database_password_here

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Razorpay Configuration (Optional - leave empty for development)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# Shop Configuration
SHOP_NAME=MyShop
SHOP_DESCRIPTION=E-commerce Store

# Logging Configuration
LOG_LEVEL=info

# Security Configuration
BCRYPT_ROUNDS=10
SESSION_SECRET=your_session_secret_here_generate_with_crypto_randomBytes_64

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
